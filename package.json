{
  "name": "kura-expo-fs",
  "version": "0.3.14",
  "description": "The FileSystem API abstraction library, Expo Filesystem Plugin",
  "author": "Yoshihiro Seki",
  "license": "MIT",
  "homepage": "https://github.com/nikochan2k/kura-expo-fs",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "typings": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "keywords": [
    "kura",
    "FileSystem",
    "storage",
    "Expo"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/nikochan2k/kura-expo-fs.git"
  },
  "scripts": {
    "clean": "rimraf ./lib",
    "compile": "tsc",
    "build": "npm-run-all clean compile",
    "npm-version": "npm version patch",
    "npm-publish": "npm publish",
    "release": "npm-run-all clean compile npm-version npm-publish",
    "test": "jest --runInBand"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "ts",
      "tsx"
    ],
    "preset": "jest-expo",
    "testMatch": [
      "<rootDir>/src/__tests__/*.spec.+(ts|tsx|js)"
    ]
  },
  "babel": {
    "presets": [
      "babel-preset-expo"
    ],
    "env": {
      "development": {
        "plugins": [
          "transform-react-jsx-source"
        ]
      }
    }
  },
  "devDependencies": {
    "@types/base-64": "^0.1.3",
    "@types/jest": "^26.0.21",
    "@types/node": "^14.14.35",
    "base-64": "^1.0.0",
    "expo-file-system": "^9.3.0",
    "jest": "^26.6.3",
    "kura": "^0.3.35",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "typescript": "^4.2.3"
  },
  "dependencies": {
    "tslib": "^2.1.0"
  },
  "peerDependencies": {
    "base-64": "^1.0.0",
    "expo-file-system": "^9.3.0",
    "kura": "^0.3.36"
  }
}
