{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "target": "es5",
    "module": "commonjs",
    "lib": ["dom", "es6"],
    "declaration": true,
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "lib",
    "noImplicitThis": true,
    "noImplicitAny": true,
    "alwaysStrict": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  }
}
